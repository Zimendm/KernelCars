@page
@model KernelCars.Pages.Cars.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Car</h4>
<div class="=row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-group">
                <label asp-for="Car.CarModelId" class="col-form-label"></label>
                <input asp-for="Car.CarModelId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Car.RegistrationNumber" class="col-form-label"></label>
                <input asp-for="Car.RegistrationNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Car.VinNumber" class="col-form-label"></label>
                <input asp-for="Car.VinNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Car.CarOwner" class="col-form-label"></label>
                <select asp-for="Car.CarOwnerId" class="form-control"
                        asp-items="@Model.OwnerNameSL"></select>
            </div>
            <div class="form-group">
                <input type="submit" name="Save" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>