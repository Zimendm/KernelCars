                                    @service.Service @* @:  @course.Title*@
                                @:</td>
                                                /**/
                                                /**/
                                            }
                                        @:</tr>
                        }
                    </table>
                </div>
                <div class="form-group col-md-12">
                    <input type="submit" value="Записать" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

